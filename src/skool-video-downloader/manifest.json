{
  "manifest_version": 3,
  "name": "Skool Video Downloader",
  "version": "1.3.1",
  "description": "Download Skool videos to your computer for offline viewing.",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://*.skool.com/*", "https://api.gumroad.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.skool.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["https://*.skool.com/*"]
    }
  ]
}